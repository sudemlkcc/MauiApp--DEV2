<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="MauiApp1deneme6.Pages.NewContent1"
        BackgroundColor="White">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Kredi Hesaplama"
               FontSize="24"
               HorizontalOptions="Center"/>

        <Entry x:Name="miktarEntry" Placeholder="Kredi Miktarı" Keyboard="Numeric"/>
        <Entry x:Name="faizEntry" Placeholder="Faiz Oranı (%)" Keyboard="Numeric"/>
        <Entry x:Name="vadeEntry" Placeholder="Vade (Yıl)" Keyboard="Numeric"/>

        <Button Text="Hesapla" Clicked="OnHesaplaClicked"/>

        <Label x:Name="sonucLabel" FontSize="18" TextColor="Black"/>
    </StackLayout>
</ContentView>
